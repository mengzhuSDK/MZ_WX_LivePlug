.anchor-info {
	width: 41.33vw;
	height: 10.7vw;
	background-color: rgba(0, 0, 0, 0.3);
	position: absolute;
	left: 10.7vw;
	top: 10vw;
	border-radius: 6.5vw;
}

.anchor-info-icon {
	width: 8.7vw;
	height: 8.7vw;
	position: absolute;
	left: 1.1vw;
	top: 1.1vw;
	border-radius: 5.5vw;
	overflow: hidden;
}

.anchor-info-icon .anchor-image {
	width: 8.7vw;
	height: 8.7vw;
}

.anchor-info-name {
	width: 20vw;
	position: absolute;
	left: 10.7vw;
	top: 0.5vw;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	color: rgba(255, 255, 255, 0.7);
	font-size: 4vw;
}

.anchor-info-popularity {
	width: 24vw;
	position: absolute;
	left: 10.7vw;
	bottom: 1.5vw;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	color: rgba(255, 255, 255, 0.7);
	font-size: 2.5vw;
}

.anchor-info-follow {
	/* width: 10.4vw;
	position: absolute; */
	right: 1.265vw;
	top: 2.265vw;
	width: 10.4vw;
	height: 5.87vw;
	position: absolute;
	/* right: 0; */
	text-align: center;
	border-radius: 3vw;
	font-size: 3.5vw;
	padding: 0;
	line-height: 5.87vw;
	background-color: #FF2164;
	color: #ffffff;
}

.anchor-info-follow .anchor-info-followbtn {
	width: 10.4vw;
	height: 5.87vw;
	position: absolute;
	right: 0;
	text-align: center;
	border-radius: 3vw;
	font-size: 3.5vw;
	padding: 0;
	line-height: 5.87vw;
	background-color: #FF2164;
	color: #ffffff;
}

